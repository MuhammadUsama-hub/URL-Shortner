<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <title>login</title>
  </head>
  <body>
    <div class="container-fluid">
      <div
        class="row d-flex justify-content-center min-vh-100 align-items-center"
      >
        <div class="col-md-4 shadow-sm bg-light opacity-75 rounded-4 p-5">
          <form action="/users/login" method="post">
            <h2 class="mb-3 text-center text-dark">Login</h2>
            <% if (locals.error) { %>
            <p style="color: red; font-weight: bold; text-align: center">
              <%= error %>
            </p>
            <% } %>
            <div class="mb-3">
              <label for="exampleInputEmail1" class="form-label text-dark fs-5"
                >Email address</label
              >
              <input
                type="email"
                class="form-control text-dark border border-black bg-light border-start-0 border-top-0 border-end-0 rounded-0 focus-ring px-1 border-white"
                id="exampleInputEmail1"
                aria-describedby="emailHelp"
                style="--bs-focus-ring-color: rgba(var(--bs-light-rgb), 0.25)"
                name="email"
                required
              />
            </div>
            <div class="mb-4">
              <label
                for="exampleInputPassword1"
                class="form-label text-dark fs-5"
                >Password</label
              >
              <input
                type="password"
                class="form-control text-dark border border-black bg-light border-start-0 border-top-0 border-end-0 rounded-0 focus-ring px-1 border-white"
                id="exampleInputPassword1"
                style="--bs-focus-ring-color: rgba(var(--bs-light-rgb), 0.25)"
                name="password"
                required
              />
            </div>
            <div class="mb-2 d-flex justify-content-center">
              <button
                type="submit"
                class="btn btn-dark p-2 w-75 fs-5 rounded-5"
              >
                Login
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <script src="/js/bootstrap.bundle.js"></script>
  </body>
</html>
